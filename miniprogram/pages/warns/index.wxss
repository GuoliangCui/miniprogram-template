/* pages/warns/index.wxss */
.body {
  padding: 30rpx;
}
.warn {
  height: 170rpx;
  display: flex;
  align-items: center;
  padding: 38rpx 30rpx;
  box-sizing: border-box;
  box-shadow: 0rpx 10rpx 30rpx 0rpx rgba(7, 32, 33, 0.1);
  border-radius: 10rpx;
  font-weight: 500rpx;
}
.warn > .type {
  color: #fff;
  flex: 0 0 94rpx;
  height: 94rpx;
  border-radius: 50%;
  background-color: #ED1E36;
  text-align: center;
  line-height: 94rpx;
  font-size: 30rpx;
}
.warn > .info {
  flex: 1;
  padding-left: 20rpx;
}
.warn > .info > .tilte {
  font-size: 32rpx;
  line-height: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  box-orient: vertical;
}
.warn > .info > .summary {
  line-height: 26rpx;
  font-size: 26rpx;
  font-weight: 400;
  margin-top: 24rpx;
}
